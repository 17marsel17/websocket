<%- include('../port/layout-start', {title: title}) %>
<%- include('../port/menu') %>

<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-body">

                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text"><%= book.authors %></p>
                <img class="card-img-top" src="../../../load/fileCover/<%= book.fileCover[0].filename %>" alt="image" width="50%" height="50%">
                <a class="btn btn-sm btn-primary" href="/api/books/<%= book.id %>/download">Скачать файл книги</a>

                <div class="text-right">
                    <a class="btn btn-sm btn-primary" href="/api/books/update/<%= book.id %>">
                        <i class="fa fa-pencil" aria-hidden="true"></i>
                    </a>
                    <form action="/api/books/delete/<%= book.id %>" method="POST" class="d-inline">
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="container">
    <% if (messages.length) { %>
        <table class="table table-striped table-sm  mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Автор</th>
                <th scope="col">Комментарий</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
    
                <% messages.map((el, idx) => {  %>
                    <tr>
                        <th scope="row"><%= idx +1 %></th>
                        <td><%= el.author %></td>
                        <td><%= el.message %></td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>
    <% } %>    

    <div class="row">
        <div class="col-4">
            <div id="list" class="list-group">

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label for="username">username</label>
                <input
                        placeholder="username"
                        type="text"
                        id="username"
                        class="form-control"
                >
            </div>
            <div class="form-group">
                <label for="text">message</label>
                <textarea
                        placeholder="message"
                        class="form-control"
                        id="text"
                ></textarea>
            </div>
            <button type="submit" id="send" class="btn btn-primary">Send</button>
       </div>
    </div>

</div>

<script type="module">
    import { io } from "https://cdn.socket.io/4.5.1/socket.io.esm.min.js";

    const bookId = location.pathname.split('/').pop();
    console.log(bookId);

    const socket = io.connect('/', {query: `bookId=${bookId}`}, (err) => {
        if (err) {
            console.log(err);
        }
        console.log('connect');
    });
    
    const boxList       = document.querySelector('#list');
    const inputUsername = document.querySelector('#username');
    const inputText     = document.querySelector('#text');
    const send      = document.querySelector('#send');

    const getTmp = (msg) => {
        return `
                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <small>${msg.username}</small>
                    </div>
                    <p class="mb-1">${msg.text}</p>
                </div>
        `;
    };

    socket.on('comments', (msg) => {
        const div = getTmp(msg)
        boxList.insertAdjacentHTML('beforeend', div)
    });

    send.addEventListener('click', () => {
        socket.emit('comments', {
            username: inputUsername.value,
            text: inputText.value,
        })
    })
</script>


<%- include('../port/layout-end') %>