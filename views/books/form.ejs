<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= book.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAuthors">Авторы</label>
        <textarea
                rows="3"
                name="authors"
                class="form-control"
                id="inputAuthors"
        ><%= book.authors %></textarea>
    </div>

    <div class="form-group">
        <label for="fileCover">Обложка книги</label>
        <input type="file" class="form-control-file" id="inputImage" name="fileCover" text=<%= book.fileCover[0].filename %>>
    </div>

    <div class="form-group">
        <label for="inputFile">Файл книги</label>
        <input type="file" class="form-control-file" id="inputFile" name="fileBook" value=<%= book.fileBook %>>
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>